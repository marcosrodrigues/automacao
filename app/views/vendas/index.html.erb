<div id="header">
    <input type="text" id="pesquisa" placeholder="F2" autofocus="true" />
</div>

<div id="left">
    <div class="field">
        <label>Total</label>
        <br/>
        <input type="text" data-bind="value: total" />
    </div>
</div>

<div id="content">
    <table width="100%">
        <thead>
            <tr>
              <th width="60%" align="left">Produto</th>
              <th width="10%" align="center">Quantidade</th>
              <th align="center">Pre√ßo Unid.</th>
              <th align="center">Total</th>
            </tr>
        </thead>
    </table>
    <div id="grid">
      <table width="100%">
        <tbody data-bind="foreach: produtos">
            <tr>
              <td width="60%" data-bind="text: nome"></td>
              <td width="10%" align="right"><input type="number" class="quantidade" data-bind="value: quantidade" /></td>
              <td align="right" data-bind="text: preco"></td>
              <td align="right" data-bind="text: total">10,00</td>
            </tr>
        </tbody>
      </table>
    </div>
</div>

<div id="footer">
    <h1 id="info">VENDA</h1>
</div>

<div id="fechar-venda" style="display: none">
    <div class="field">
        <label>Desconto</label>
        <br/>
        <input type="text" data-bind="value: desconto" />
    </div>
</div>

<div id="recibo" style="display: none;">
  <a class="media" href="/recibo.pdf"></a>
</div>