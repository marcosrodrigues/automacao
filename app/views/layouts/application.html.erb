<!DOCTYPE html>
<html>
<head>
  <title>Automação</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <style type="text/css">
    body {
        background-color: #e1e6ea;
    }
    #logo {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 400px;
        height: 300px;
        margin-top: -150px; /* Half the height */
        margin-left: -200px; /* Half the width */
    }
  </style>

  <script type="text/javascript">
      Ext.require([
          'Ext.grid.*',
          'Ext.data.*',
          'Ext.util.*',
          'Ext.state.*',
          'Ext.window.Window',
          'Ext.form.*'
      ]);

      Ext.onReady(function() {
          Ext.QuickTips.init();

          // setup the state provider, all state information will be saved to a cookie
          Ext.state.Manager.setProvider(Ext.create('Ext.state.CookieProvider'));

          Ext.create('Ext.toolbar.Toolbar', {
              renderTo: document.body,
              items: [{
                  xtype: 'splitbutton',
                  text: 'Cadastros',
                  menu: new Ext.menu.Menu({
                      items: [{
                          text: 'Usuários',
                          icon: '/assets/icons/fam/users.png',
                          handler: function(){

                          }
                      },'-',{
                          text: 'Clientes',
                          icon: '/assets/icons/fam/customers.png',
                          handler: function(){
                              abrirCadastroClientes();
                          }
                      },{
                          text: 'Tipos de Produto',
                          handler: function(){
                               abrirCadastroTiposProduto();
                          }
                      },{
                          text: 'Fornecedores',
                          icon: '/assets/icons/fam/fornecedores.png',
                          handler: function(){
                              abrirCadastroFornecedores();
                          }
                      },{
                          text: 'Produtos',
                          icon: '/assets/icons/fam/products.png',
                          handler: function(){
                              abrirCadastroProdutos();
                          }
                      }]
                  })
              },{
                  xtype: 'splitbutton',
                  text: 'Movimentos',
                  menu: new Ext.menu.Menu({
                      items: [{
                          text: 'Vendas',
                          icon: '/assets/icons/fam/sales.png',
                          handler: function(){
                            window.open('/vendas/index');
                          }
                      },{
                          text: 'Movimentar Estoque',
                          icon: '/assets/icons/fam/stock.png',
                          handler: function(){

                          }
                      },'-',{
                          text: 'Contas a Pagar',
                          handler: function(){

                          }
                      },{
                          text: 'Contas a Receber',
                          handler: function(){

                          }
                      }]
                  })
              },{
                  xtype: 'splitbutton',
                  text: 'Relatórios e Listagens',
                  menu: new Ext.menu.Menu({
                      items: [{
                          text: 'Listagem de Fornecedores',
                          handler: function(){

                          }
                      },{
                          text: 'Listagem de Produtos',
                          handler: function(){

                          }
                      },{
                          text: 'Estoque',
                          handler: function(){

                          }
                      },{
                          text: 'Pedidos de Venda',
                          handler: function(){

                          }
                      }]
                  })
              }]
          });
      });
  </script>
</head>
<body>

<img src="/assets/logo.png" id="logo" />

<%= yield %>

</body>
</html>
